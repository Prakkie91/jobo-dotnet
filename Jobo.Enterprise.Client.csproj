<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net6.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <LangVersion>12</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Jobo.Enterprise.Client</RootNamespace>

    <!-- NuGet Package Metadata -->
    <PackageId>Jobo.Enterprise.Client</PackageId>
    <Version>2.0.0</Version>
    <Authors>Jobo</Authors>
    <Company>Jobo</Company>
    <Description>Official .NET client library for the Jobo Enterprise API. Access millions of job listings from 45+ ATS platforms, geocode locations, and automate job applications. Organized by feature area: Jobs Feed, Search, Locations, and Auto Apply.</Description>
    <PackageTags>jobo;jobs;api;enterprise;job-board;recruitment;ats;greenhouse;lever;workday;smartrecruiters;ashby;bamboohr;icims;job-scraper;job-listings;job-data;job-aggregator;job-feed;applicant-tracking-system;hiring;job-search-api;geocoding;auto-apply</PackageTags>
    <PackageIcon>jobo-logo.png</PackageIcon>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://jobo.world/enterprise/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Prakkie91/jobo-dotnet.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DefaultItemExcludes>$(DefaultItemExcludes);Tests\**</DefaultItemExcludes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
    <None Include="LICENSE" Pack="true" PackagePath="\" />
    <None Include="jobo-logo.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="8.0.5" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.2" />
  </ItemGroup>

</Project>
